<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="#ffffff"
    tools:context=".View_memo"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffffff"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="left|center"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="18dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/view_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이곳은 날짜"
                android:textSize="16dp"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:textColor="#5673eb"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날씨 : "
                android:textSize="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="9dp"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:textColor="#5673eb"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/view_weather"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_slider_view"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <androidx.viewpager.widget.ViewPager
                    android:background="@drawable/shape2"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="232dp"
                    android:layout_marginTop="24dp" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal|bottom"
                    app:ci_drawable="@drawable/black_radius"
                    app:ci_height="7dp"
                    app:ci_margin="4dp"
                    app:ci_width="7dp" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인간관계"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:layout_marginRight="68dp"
                     />
                    <RatingBar

                        android:id="@+id/view_q1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="0.5"
                        android:progressTint="@color/circle"
                        android:isIndicator="true"
                        android:secondaryProgressTint="@color/circle"
                        android:progressBackgroundTint="#d1d1d1"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:numStars="5"
                        android:rating="0.0"
                        ></RatingBar>
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일의 만족도"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:layout_marginRight="50dp"
                    />
                <RatingBar
                    android:id="@+id/view_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stepSize="0.5"
                    android:progressTint="@color/circle"
                    android:isIndicator="true"
                    android:secondaryProgressTint="@color/circle"
                    android:progressBackgroundTint="#d1d1d1"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:numStars="5"
                    android:rating="0.0"
                    ></RatingBar>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나를 위한 시간"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:layout_marginRight="31dp"
                    />
                <RatingBar
                    android:id="@+id/view_q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stepSize="0.5"
                    android:progressTint="@color/circle"
                    android:isIndicator="true"
                    android:secondaryProgressTint="@color/circle"
                    android:progressBackgroundTint="#d1d1d1"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:numStars="5"
                    android:rating="0.0"
                    ></RatingBar>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="42dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="이곳은 본문"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:textColor="#202020"
                    android:id="@+id/view_content"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>