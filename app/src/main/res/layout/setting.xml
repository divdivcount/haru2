<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="26dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지금까지 작성된 하루리뷰는"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:textSize="18dp"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/setting_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textSize="18dp"
                    android:textColor="#5673EB"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="일"
                    android:fontFamily="@font/spoqa_han_sans_neo_bold"
                    android:textSize="18dp"
                    android:textColor="#5673EB"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 입니다"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:textSize="18dp"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
            <!--    일자 끝  / 데이터 시작      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="11.5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="데이터"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:textSize="13dp"
                    ></TextView>
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f0f0f0">
                </View>

            <LinearLayout
                android:layout_marginTop="12.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/backup_restore"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="백업/복원"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textSize="18dp"
                        android:textColor="#202020"
                        android:layout_weight="1"
                        ></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_direction"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/export">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내보내기"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textSize="18dp"
                        android:textColor="#202020"
                        android:layout_weight="1"
                        ></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_direction"/>
                </LinearLayout>
            </LinearLayout>
            <!--   데이터 끝  / 설정 시작  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="11.5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="설정"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:textSize="13dp"
                    ></TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f0f0f0">
            </View>
            <LinearLayout
                android:layout_marginTop="12.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비밀번호"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textSize="18dp"
                        android:textColor="#202020"
                        android:layout_weight="1"
                        ></TextView>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="OFF"
                        android:textOn="ON"
                        android:id="@+id/password"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="알람"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textSize="18dp"
                        android:textColor="#202020"
                        android:layout_weight="1"
                        ></TextView>
                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="OFF"
                        android:textOn="ON"
                        android:id="@+id/alram"
                        />
                </LinearLayout>
            </LinearLayout>
            <!--설정 끝 / 의견 시작-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="11.5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="또 감사합니다. :)"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:textSize="13dp"
                    ></TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f0f0f0">
            </View>
            <LinearLayout
                android:layout_marginTop="12.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/opinion">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="의견 남기기"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textSize="18dp"
                        android:textColor="#202020"
                        android:layout_weight="1"
                        ></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_direction"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rating_opinion">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="별점 남기기"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textSize="18dp"
                        android:textColor="#202020"
                        android:layout_weight="1"
                        ></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_direction"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/friend_share">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="친구에게 공유하기"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textSize="18dp"
                        android:textColor="#202020"
                        android:layout_weight="2"
                        ></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_direction"/>
                </LinearLayout>
            </LinearLayout>
            <!--의견 끝 / 마지막-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="11.5dp"
                android:orientation="vertical">
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f0f0f0">
            </View>
            <LinearLayout
                android:layout_marginTop="12.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/all_delete">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모든 노트 삭제"
                        android:fontFamily="@font/spoqa_han_sans_neo_regular"
                        android:textSize="18dp"
                        android:textColor="#202020"
                        android:layout_weight="1"
                        ></TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/right_direction"/>
                </LinearLayout>

            </LinearLayout>
        <!--     끝 레이어       -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>