<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--23v 이상은 상태바 아이콘까지 띄어줍니다.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <item name="android:actionMenuTextAppearance">
            @style/TextAppearance.Holo.Widget.ActionBar.Menu
        </item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>


        <!--점 3개 메뉴 디자인-->
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
        <!--actionbar 버튼 호버 색상-->
        <item name="actionBarItemBackground">@drawable/actionbar</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar</item>
    </style>
</resources>